<% include ./partials/header %>
<div class="ui main container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>

<form class="ui form" action="/blogs/<%= blog.id %>?_method=PUT" method="POST">
    <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>"></div>
    <div class="field">
        <label>Image </label>
        <input type="text" name="blog[image]" placeholder="image url" value="<%= blog.image %>"></div>
    <div class="field">
        <label>Blog post</label>
        <textarea  name="blog[body]" placeholder="BLog post goes here"><%= blog.body %></textarea>
    <div class="field"><input class="ui violet small basic button" type="submit"></div>
</form>
</div>
<% include ./partials/footer %>